<Page
    x:Class="Seemon.Todo.Views.Pages.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:helpers="using:Seemon.Todo.Helpers.Views"
    xmlns:local="using:Seemon.Todo.Models"
    mc:Ignorable="d">
    <Page.Resources>
        <DataTemplate x:Key="TaskList" x:DataType="local:Task">
            <TextBlock Text="{x:Bind Raw}" x:Phase="1" Margin="0,5,0,5"/>
        </DataTemplate>
    </Page.Resources>
    <Grid x:Name="ContentArea" >
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="28"/>
        </Grid.RowDefinitions>
        <ListView Grid.Row="0" ItemsSource="{x:Bind ViewModel.Tasks}" Background="{ThemeResource SolidBackgroundFillColorBaseBrush}" BorderBrush="{ThemeResource SystemControlForegroundBaseMediumLowBrush}" BorderThickness="0 0 0 0" 
                  helpers:FocusHelper.IsFocused="True">
        </ListView>
        <Grid Grid.Row="1" Padding="12 0" Background="{StaticResource CardBackgroundFillColorSecondaryBrush}" BorderThickness="0 1 0 0" BorderBrush="{StaticResource CardStrokeColorDefaultBrush}" >
            <TextBlock Style="{StaticResource BodyTextBlockStyle}" Text="Filter" VerticalAlignment="Center" />
        </Grid>
    </Grid>
</Page>
